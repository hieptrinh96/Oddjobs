<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/profiles/show.css">
  <%- include('../partials/nav') %>

    <section>
      <div>
        <img class="profile-avatar" src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
      </div>
      <div>
        <h2>User logged in</h2>
        <p>Name: <%= profile.name %>
        </p>
        <p>Location: <%= profile.location %>
        </p>
        <p>What job category do you want? <%= profile.experience %>
        </p>
        Do you have a preference for jobs?
        <%= profile.preference %>
      </div>
      <% if (isSelf) { %>
        <a href="/profiles/<%= profile._id %>/edit">Edit</a>
        <% } %>
          <div>
            <h2>Saved Jobs</h2>
            <p>
              <% profile.jobs.forEach(job=> { %>
                <div class="job-links">
                  <a href="/jobs/<%= job._id %> ">
                    <p>Posted by <%= job.name %>
                    </p>
                    <p>
                      Job Type: <%= job.classify %>
                    </p>
                    <p>Location: <%= job.location %>
                    </p>
                    <p>Job Description: <%= job.detail %>
                    </p>
                  </a>
                </div>
                <% }) %>
            </p>
          </div>
    </section>
    <section>
      <% if (!isSelf) { %>
        <h2>Give user a review!</h2>
        <div>
          <a href="/reviews/new/<%= profile._id %>">Create a post</a>
        </div>
        <% } %>
    </section>
    <section>
      <% if (profile.reviews.length) { %>
        <% profile.reviews.forEach(review=> { %>
          <div>
            <p>
              <%= review.comment %>
            </p>
            <p>
              <%= review.rating %>
            </p>
          </div>
          <% }) %>
            <% } %>
    </section>
    <%- include('../partials/footer') %>