<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/profiles/show.css">
  <%- include('../partials/nav') %>

    <h1>About me</h1>
    <section class="section-one">
      <div class="profile-container">
        <img class="profile-avatar" src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
      </div>
      <div class="profile-info">
        <strong>
          <p>Name:
        </strong>
        <%= profile.name %>
          </p>
          <strong>
            <p>Location:
          </strong>
          <%= profile.location %>
            </p>
            <strong>
              <p>Experience
            </strong>
            <%= profile.experience %>
              </p>
              <strong>
                <p>
                  Do you have a preference for jobs?
              </strong>
              <%= profile.preference %>
                </p>
                <% if (isSelf) { %>
                  <a href="/profiles/<%= profile._id %>/edit">
                    <button>Edit</button>
                  </a>
                  <% } %>
      </div>
      <div>
      </div>
      <div class="saved-jobs">
        <h2>Saved Jobs</h2>
        <p>
          <% profile.savedJobs.forEach(job=> { %>
            <div class="job-links">
              <a href="/jobs/<%= job._id %> ">
                <p>Posted by <%= job.name %>
                </p>
                <p>
                  Job Type: <%= job.classify %>
                </p>
                <p>Location: <%= job.location %>
                </p>
                <p>Job Description: <%= job.detail %>
                </p>
              </a>
              <form action="/profiles/<%= profile._id %>/savedJobs/<%= job._id %>?_method=delete" method="post">
                <button>Delete</button>
              </form>
            </div>
            <% }) %>
        </p>
      </div>
    </section>
    <section>
      <h2>User Reviews</h2>
      <% if (!isSelf) { %>
        <div>
          <a href="/reviews/new/<%= profile._id %>">Create a post</a>
        </div>
        <% } %>
    </section>
    <section>
      <% if (profile.reviews.length) { %>
        <% profile.reviews.forEach(review=> { %>
          <div>
            <p>
              <%= review.comment %>
            </p>
            <p>
              <%= review.rating %>
            </p>
          </div>
          <% }) %>
            <% } else { %>
              <h2>Give this user a review</h2>
              <% } %>
    </section>
    <%- include('../partials/footer') %>