<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/jobs/show.css">
  <%- include('../partials/nav') %>

    <section>
      <div>
        <img class="profile-avatar" src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
      </div>
      <div>
        <% profile.aboutMe.forEach(description=> { %>

          <p>Name: <%= description.name %>
          </p>
      </div>
      <div>
        <p>What are you good at? <%= description.experience %>
        </p>
      </div>
      <% }) %>
        </div>
        <% if (isSelf) { %>
          <h2>User logged in</h2>
          <% } %>
    </section>
    <%- include('../partials/footer') %>