<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/profiles/show.css">
  <%- include('../partials/nav') %>
    <% if (isSelf) { %>
      <h1>About me</h1>
      <% } %>
        <section class="section-one">
          <div class="card">
            <img class="profile-avatar card-img-top" src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
            <div class="card-body">
              <h5 class="card-title">
                <%= profile.name %>
              </h5>
              <p class="card-text"><strong>Location:</strong></p>
              <p class="card-text">
                <%= profile.location %>
              </p>
              <p class="card-text"><strong>Experience</strong>
              </p>
              <p class="card-text">
                <%= profile.experience %>
              </p>
              <p class="card-text">
                <strong>Do you have a preference for jobs?</strong>
              </p>
              <p class="card-text">
                <%= profile.preference %>
              </p>
              <% if (isSelf) { %>
                <a href="/profiles/<%= profile._id %>/edit">
                  <button class="btn btn-primary">Edit</button>
                </a>
                <% } %>
            </div>
          </div>
          <% if (isSelf) { %>
            <div class="saved-jobs">
              <h2>Saved Jobs</h2>
              <% profile.savedJobs.forEach(job=> { %>
                <div class="job-links">
                  <a href="/jobs/<%= job._id %> ">
                    <p>Posted by <%= job.name %>
                    </p>
                    <p>Job Type: <%= job.classify %>
                    </p>
                    <p>Location: <%= job.location %>
                    </p>
                    <p>Job Description: <%= job.detail %>
                    </p>
                  </a>
                  <form action="/profiles/<%= profile._id %>/savedJobs/<%= job._id %>?_method=delete" method="post">
                    <button>Delete</button>
                  </form>
                </div>
                <% }) %>
            </div>
            <% } %>
        </section>
        <section>
          <h2>User Reviews</h2>
          <% if (!isSelf) { %>
            <div>
              <a href="/reviews/new/<%= profile._id %>">Create a post</a>
            </div>
            <% } %>
        </section>
        <section>
          <% if (profile.reviews.length) { %>
            <% profile.reviews.forEach(review=> { %>
              <div>
                <p>
                  <strong>Rating: </strong>
                  <%= review.rating %> / 5
                </p>
                <p>
                  <%= review.comment %>
                </p>
              </div>
              <% }) %>
                <% } else { %>
                  <h2>Give this user a review</h2>
                  <% } %>
        </section>
        <%- include('../partials/footer') %>