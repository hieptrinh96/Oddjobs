      <h2>Tell us about the user!</h2>
      <form action="/reviews/<%= profileId %>" method="post">
        <div class="form-group">
          <label name="comment">
            Describe your experience with the user
          </label>
          <textarea name="comment" class="form-control"></textarea>
        </div>
        <div class="form-group">
          </label>
          <label name="rating">
            Rate the user
          </label>
          <input type="number" name="rating" min="1" max="5" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Add a review!</button>
      </form>
    </main>

