<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/jobs/new.css">
  <%- include('../partials/nav') %>

    <main>
      <h1>
        <%= title %>
      </h1>
      <div class="form-container">

        <form action="/jobs" method="post">

          <label name="name">
            Name:
            <input type="text" name="name">
          </label>


          <label name="classify">Type of work</label>
          <select name="classify">
            <option value="manual">Manual Work</option>
            <option value="design">Design</option>
            <option value="Innovate">Ideas</option>
          </select>


          <label name="location">Location:</label>
          <input type="text" name="location" autocomplete="off">


          <label name="detail">What do you need?</label>
          <textarea name="detail" autocomplete="off"></textarea>

          <button type="submit">Post Job</button>
        </form>
      </div>
    </main>


    <%- include('../partials/footer') %>