<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/jobs/edit.css">
  <%- include('../partials/nav') %>

    <main>
      <h1>
        <%= title %>
      </h1>
      <form action="/jobs/<%= job._id %>?_method=put" method="post">
        <div class="form-row">
          <div class="form-group">
            <label name="classify">Type of work</label>
            <select name="classify" class="form-control">
              <option value="manual">Manual Labor</option>
              <option value="design">Design</option>
              <option value="Innovate">Ideas</option>
            </select>
          </div>
          <div class="form-group">
            <label name="location">Location:</label>
            <input type="text" name="location" autocomplete="off" class="form-control">
          </div>
          <div class="form-group">
            <label name="detail">What do you need?</label>
            <textarea type="text" name="detail" autocomplete="off" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Update Job</button>
        </div>
      </form>
    </main>


    <%- include('../partials/footer') %>